#!/bin/bash

# API Automation Script for Pokémon API (Pikachu)
# Saves response to data.json, errors to errors.txt

# API endpoint for Pikachu (Pokémon ID 25)
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request with curl
curl -s -X GET "$API_URL" -H "Accept: application/json" > "$OUTPUT_FILE" 2>> "$ERROR_FILE"

# Check if request was successful
if [ $? -ne 0 ]; then
    echo "[$(date)] Error: Failed to fetch data from $API_URL" >> "$ERROR_FILE"
    exit 1
fi

# Validate JSON response
if ! jq empty "$OUTPUT_FILE" 2>> "$ERROR_FILE"; then
    echo "[$(date)] Error: Invalid JSON response from API" >> "$ERROR_FILE"
    exit 1
fi

echo "Successfully saved Pikachu data to $OUTPUT_FILE"
exit 0
